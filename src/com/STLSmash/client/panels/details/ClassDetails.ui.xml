<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:html="urn:import:org.gwtbootstrap3.client.ui.html">
    <html:Div>
        <b:Column size="XS_10">
            <b:Row>
                <b:Column size="XS_3">
                    <b:Column size="XS_12">
                        <b:Panel>
                            <b:PanelHeader>
                                <html:Strong text="Class Traits"/>
                            </b:PanelHeader>
                            <b:PanelBody>
                                <html:Strong text="Hit Dice: "/>
                                <html:Span text="1D12" paddingLeft="10"/>
                                <b:Heading size="H4" text="Proficiencies"/>
                                <html:Strong text="Armor"/>
                                <b:ListItem text="Light"/>
                                <b:ListItem text="Medium"/>
                                <b:ListItem text="Shields"/>
                                <html:Strong text="Weapons"/>
                                <b:ListItem text="Simple"/>
                                <b:ListItem text="Martial"/>
                                <html:Strong text="Saving Throws"/>
                                <b:ListItem text="Strength"/>
                                <b:ListItem text="Constitution"/>
                                <html:Strong text="Skills (Chose 2)"/>
                                <b:FormGroup>
                                    <b:CheckBox formValue="value1" name="radio1" text="Acrobatics" visible="false"/>
                                    <b:CheckBox formValue="value1" name="radio1" text="Athletics"/>
                                    <b:CheckBox formValue="value2" name="radio1" text="Dingus"/>
                                </b:FormGroup>
                            </b:PanelBody>
                        </b:Panel>
                    </b:Column>
                </b:Column>
                <b:Column size="XS_9">
                    <b:Panel>
                        <b:PanelHeader>
                            <html:Strong text="Starting Equipment"/>
                        </b:PanelHeader>
                        <b:PanelBody>
                            <b:Row>
                                <b:Column size="SM_4">
                                    <b:FormGroup>
                                        <b:InlineRadio formValue="value1" name="radio1" text="Smith's Tools" visible="false"/>
                                        <b:InlineRadio formValue="value1" name="radio1" text="Greataxe"/>
                                        <b:InlineRadio formValue="value1" name="radio1" text="Any Martial Weapon"/>
                                    </b:FormGroup>
                                </b:Column>
                                <b:Column size="SM_4">
                                    <b:InlineRadio formValue="value2" name="radio2" text="Smith's Tools" visible="false"/>
                                    <b:InlineRadio formValue="value2" name="radio2" text="Handaxe x2"/>
                                    <b:InlineRadio formValue="value2" name="radio2" text="Any Simple Weapon"/>
                                </b:Column>
                                <b:Column size="SM_4">
                                    <b:ListItem text="Explorer's Pack"/>
                                    <b:ListItem text="Javelin x4"/>
                                </b:Column>
                            </b:Row>
                        </b:PanelBody>
                    </b:Panel>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="XS_12">
                    <b:Panel>
                        <b:PanelHeader>
                            <html:Strong text="Primal Path"/>
                        </b:PanelHeader>
                        <b:PanelBody>
                            <b:NavTabs>
                                <b:TabListItem active="true" dataTarget="#hillDwarfTab">Hill Dwarf</b:TabListItem>
                                <b:TabListItem dataTarget="#mountainDwarfTab">Mountain Dwarf</b:TabListItem>
                            </b:NavTabs>
                            <b:TabContent paddingTop="10">
                                <b:TabPane fade="true" b:id="hillDwarfTab">
                                    <b:Column size="XS_3">
                                        <b:Panel>
                                            <b:PanelHeader text="Ability Score Increase"/>
                                            <b:PanelBody>
                                                <b:Label text="WIS +1"/>
                                            </b:PanelBody>
                                        </b:Panel>
                                    </b:Column>
                                    <b:Column size="XS_6">
                                        <b:Panel>
                                            <b:PanelHeader text="Dwarven Toughness"/>
                                            <b:PanelBody>
                                                <html:Span text="Your hit point maximum increases by 1, and it increases by 1 every time you gain a level."/>
                                            </b:PanelBody>
                                        </b:Panel>
                                    </b:Column>
                                </b:TabPane>
                                <b:TabPane fade="true" b:id="mountainDwarfTab">
                                    <b:Column size="XS_3">
                                        <b:Panel>
                                            <b:PanelHeader text="Ability Score Increase"/>
                                            <b:PanelBody>
                                                <b:Label text="STR +2"/>
                                            </b:PanelBody>
                                        </b:Panel>
                                    </b:Column>
                                    <b:Column size="XS_6">
                                        <b:Panel>
                                            <b:PanelHeader text="Dwarven Armor Training"/>
                                            <b:PanelBody>
                                                <html:Span text="You have proficiency with light and medium armor."/>
                                            </b:PanelBody>
                                        </b:Panel>
                                    </b:Column>
                                </b:TabPane>
                            </b:TabContent>
                        </b:PanelBody>
                    </b:Panel>
                </b:Column>
            </b:Row>
        </b:Column>
    </html:Div>
</ui:UiBinder>